[Unit]
Description=Timer for Extended Mind Hourly Ticks

[Timer]
# Wait five minutes before launching the first tick to make sure everything is up and running
OnBootSec=5min
OnUnitActiveSec=1h
Unit=tick-hourly.service

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineOf=tick-hourly.service

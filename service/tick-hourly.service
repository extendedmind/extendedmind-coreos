[Unit]
Description=Extended Mind Hourly Tick
BindsTo=backend.service
After=backend.service

[Service]
TimeoutStartSec=0
Type=simple
ExecStart=/bin/bash -c "IS_MASTER=$(curl --write-out %{http_code} --silent --output /dev/null http://localhost:8081/ha/master);if [ $IS_MASTER -eq 200 ]; then curl -d '{\"priority\":2}' -H 'Content-Type:application/json' localhost:8081/tick; fi;"

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineMetadata=role=node
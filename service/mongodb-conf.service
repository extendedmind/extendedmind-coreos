[Unit]
Description=MongoDB Configuration Templates
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
Type=oneshot
RemainAfterExit=true
ExecStartPre=-/usr/bin/docker rm mongodb-conf
ExecStartPre=/usr/bin/docker pull extendedmind/mongodb-conf:latest
ExecStart=/usr/bin/docker create --name mongodb-conf extendedmind/mongodb-conf:latest

[Install]
WantedBy=multi-user.target

[X-Fleet]
Global=true
MachineMetadata=role=node
